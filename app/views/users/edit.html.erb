<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="form-header-title">User info</h2>
    </div>
      <% if @user.errors.any? %>
        <h3 id ="error">入力した内容にerrorが<%= @user.errors.count %>件あります</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model:@user, local:true do |f| %>
        <label>Name</label>
        <%= f.text_field :name %>
        </br></br>
        <label>Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
        </br>
        <label>Introduction</label>
        <%= f.text_area :introduction%>
        </br>
        <%= f.submit "Update User" %>
      <% end %>
  </div>
</div>