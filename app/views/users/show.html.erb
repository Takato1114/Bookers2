<%= render 'users/sidemenu', {user:@user, book:@book} %>
<div class="col-xs-9">
<!-- そのユーザーが投稿したデータを表示する-->
  <h2>Books</h2>
  <table class ="table">
    <thead>
      <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      </tr>
    </thead>
    <body>
    <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
    </body>
</table>
</div>
</div>
</div>
