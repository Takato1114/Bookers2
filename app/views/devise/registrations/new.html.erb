<div class="container">
<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group has-icon">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, id:"inputName"%>
      <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="form-group has-icon">
      <%= f.label :email %><br />
      <%= f.email_field :email,  id:"inputEmail"%>
      <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="form-group has-icon">
      <%= f.label :password %> (6 characters minimum)<br />
      <%= f.password_field :password, autocomplete: "off",  id:"inputPassword"%>
      <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="form-group has-icon">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", id:"inputConfirmPassword"%>
      <span class="fa fa-check-circle-o form-control-icon" aria-hidden="true"></span>
    </div>

    <div class="actions">
    <%= f.submit "Sign up", class:'btn btn-success' %>
    </div>
    <% end %>

<%= render "devise/shared/links" %>
</div>
